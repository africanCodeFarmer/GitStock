button.closeChartsViewButton{
  position: absolute;
  top: 420rpx;
  display: block;
  width: 100%;
  margin: 10rpx auto;
  overflow: hidden;
}
view.chartsView{
  position: absolute;
  padding-top: 20rpx;
  width: 100%;
  height: 510rpx;
  background-color: white;
  border-top: 1px solid rgba(128, 128, 128, 0.5);
  border-bottom: 1px solid rgba(128, 128, 128, 0.5);
  top: 300rpx;
}
.canvas {
    width: 750rpx;
    height: 500rpx;
}

view.rowline{
  margin:14rpx 10rpx 0rpx 10rpx;
  height: 2rpx;
  border-bottom: 1px solid rgba(128, 128, 128, 0.5);
}

#textView{
  width: 96%;
  height: 240rpx;
  padding:2%;
}

button.redButton{
  background-color: rgb(255, 134, 134);
}

.btn_ok{
  background-color: rgb(159, 221, 159);
}

.myButton{
  width: 160rpx;
  height: 60rpx;
  margin: 20rpx;
}

#viewButton{
  position: inline-block;
  float: left;
}

#changViewHead{
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 120%;
}

#changeView{
  border: 1rpx solid gray;
  border-radius: 6%;
  background-color: white;
  position: fixed;
  left: 10%;
  width:80%;
  top: 20%;
  height: 430rpx;
}

#myView{
  margin-left: 10rpx;
  margin-right: 10rpx;
}

#clearButton{
  position: fixed;
  top: 10rpx;
  right: 10rpx;
}

#clearAllButton{
  position: fixed;
  top: 80rpx;
  right: 10rpx;
  background-color: rgb(255, 134, 134)
}

button.showGraphButton{
  position: fixed;
  top: 160rpx;
  right: 10rpx;
  background-color: lightblue;
}

.headerDate{
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.8);
  display: block;
  text-align: center;
  margin-top: 10rpx;
  flex-direction: column;
  font-size: 140%;
  padding-bottom: 4rpx;
}

.headerText{
  margin-top: 10rpx;
  color: gray;
  word-break:break-all;
}

button{
  margin-left: 10rpx;
  margin-right: 10rpx;
}