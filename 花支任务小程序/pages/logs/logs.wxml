<!--logs.wxml-->
<button id="clearLogsButton" bindtap="clearLogs">清空账单</button>

<view class="container log-list">
  <block wx:for="{{nowDayLogs}}" wx:for-item="log">
    <text class="addLogs log-item" wx:if="{{nowDaySigns[index]=='+'}}">{{log}}</text>
    <text class="subLogs log-item" wx:elif="{{nowDaySigns[index]=='-'}}">{{log}}</text>

    <text class="dhLogs log-item" wx:elif="{{nowDaySigns[index]=='a'}}">{{log}}</text>
    <text class="grayLogs log-item" wx:elif="{{nowDaySigns[index]=='s'}}">{{log}}</text>

    <text class="dataLogs log-item" wx:else>{{log}}</text>
  </block>
</view>

<view class="container log-list">
  <block wx:for="{{logs}}" wx:for-item="log" wx:if="{{index<page*20}}">
    <text class="addLogs log-item" wx:if="{{signs[index]=='+'}}">{{log}}</text>
    <text class="subLogs log-item" wx:elif="{{signs[index]=='-'}}">{{log}}</text>

    <text class="dhLogs log-item" wx:elif="{{signs[index]=='a'}}">{{log}}</text>
    <text class="grayLogs log-item" wx:elif="{{signs[index]=='s'}}">{{log}}</text>

    <text class="dataLogs log-item" wx:else>{{log}}</text>
  </block>
</view>
