<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">{{custom_data.backText}}</view>
	<view slot="content">{{custom_data.content}}</view>
</cu-custom>

<view class="padding">
  <view class="padding-xl radius shadow bg-white">
    <van-row>
      <van-col span="16">
        <view class="text-left" style="font-size:20px;">时间: {{month_title}}</view>
      </van-col>
      <van-col span="8">
        <view class="text-right">
          <van-button plain round type="info" size="small" bind:click="onClick_timeChoose">时间选择</van-button>
        </view>
      </van-col>
    </van-row>

    <view style="height:40rpx;"></view>

    <van-row>
      <van-col span="12">
        <view class="text-left margin-left">月收入: {{month_income}}</view>
      </van-col>
      <van-col span="12">
        <view class="text-right margin-right">月支出: {{month_spend}}</view>
      </van-col>
    </van-row>
  </view>
</view>

<view class="padding">
  <view class="padding-xl radius shadow bg-white">
    <view class="box">
      <ec-canvas id="column_chart" canvas-id="column_chart" ec="{{ ec_column_chart }}"></ec-canvas>
    </view>
  </view>
</view>

<view class="padding">
  <view class="padding-xl radius shadow bg-white">
    <view class="box" style="height:600rpx;">
      <ec-canvas id="pie_chart" canvas-id="pie_chart" ec="{{ ec_pie_chart }}"></ec-canvas>
    </view>
  </view>
</view>

<van-popup 
  show="{{ show_timeChoose_popup }}" 
  bind:close="onClose_timeChoose_popup"
  position="bottom"
  custom-style="height: 50%;"
>
  <van-datetime-picker
  title="时间选择"
  type="year-month"
  value="{{ currentDate }}"
  bind:cancel="onClose_timeChoose_popup"
  bind:confirm="timeChoose"
  />
</van-popup>