<import src="../public/public.wxml" />
<template is="custom" />

<van-tabs sticky>
  <van-tab title="日志">
    <!-- head -->
    <van-sticky offset-top="{{ 60 }}">
      <van-panel>
        <van-row>
          <van-col offset="1" span="22">
              <van-search
                name="search_value"
                placeholder="请输入搜索关键字"
                bind:search="onSearch"
                bind:cancel="onCancel_search"
                show-action
                shape="round"
                action-text=" 还原"
                background="#fff"
              />
          </van-col>
          <van-col span="1"></van-col>
        </van-row>
      </van-panel>
    </van-sticky>

    <!-- content -->
    <van-panel wx:for="{{spendLogs}}" wx:if="{{index<=show_spendLog_day}}">
      <!-- content-header -->
      <view slot="header" style="background-color:#f1f1f1;line-height:60rpx;margin-top:20rpx;">
        <van-row>
          <van-col offset="2" span="6">
            <text style="font-size:20px;">{{item.time}}</text>
          </van-col>
          <van-col span="14" class="text-right">
            <text style="font-size:17px;color:#353535;">日花支: {{item.day_spend}}</text>
          </van-col>
          <van-col span="2"></van-col>
        </van-row>
      </view>

      <!-- content-content -->
      <view wx:for="{{item.datas}}" wx:for-item="datas">
      <van-swipe-cell right-width="{{ 90 }}">
        <van-cell use-label-slot center>
          <view slot="label">
            <view style="font-size:11px;color:#B2B2B2;margin-bottom:5rpx;">{{datas.spend_type==null?'转账':datas.spend_type}}</view>
            <view style="font-size:14px;color:#B2B2B2;">{{datas.detail_time}} </view>
          </view>
          <view slot="title">
            <text style="font-size:17px;">{{datas.name}} </text>
            <text style="font-size:14px;color:#888888;">{{datas.comment}}</text>
          </view>
          <view slot="icon">
            <text class="cuIcon-{{datas.icon}}" style="margin-right:20rpx;font-size:40px;"></text>
          </view>
          <view slot='right-icon'>
            <view wx:if="{{datas.operate=='+'}}" class="text-right" style="font-size:17px;color:#09BB07;">{{datas.operate}}{{datas.value}}</view>
            <view wx:if="{{datas.operate=='-'}}" class="text-right" style="font-size:17px;color:#E64340;">{{datas.operate}}{{datas.value}}</view>
            <view style="font-size:14px;color:#353535;">余额:{{datas.remain}}</view>
          </view>
        </van-cell>
        <view slot="right" style="height:100%;">
          <van-button custom-style="height:100%;" type="primary" icon="" id="{{datas.id}}" bind:click="edit" data-time="{{item.time}}">编辑</van-button>
          <van-button custom-style="height:100%;" type="danger" icon="" id="{{datas.id}}" bind:click="delete" data-time="{{item.time}}" data-message="{{datas.name}} {{datas.comment}} {{datas.operate}}{{datas.value}}">删除</van-button>
        </view>
      </van-swipe-cell>
      </view>
    </van-panel>
  </van-tab>

  <van-tab title="统计"></van-tab>
</van-tabs>

<van-divider hairline contentPosition="center">已经到底啦</van-divider>
<van-divider hairline />
<van-divider hairline />
<van-divider hairline />

<van-dialog id="van-dialog" />

<van-dialog
  use-slot
  title="编辑"
  show="{{ show_edit_dialog }}"
  show-cancel-button
  bind:close="onClose_edit_dialog"
  bind:confirm="update"
>
  <van-row>
    <van-col offset="2" span="20">
      <van-field
        label="注释"
        placeholder="请输入注释"
        value="{{spendLogData.comment}}"
        border="{{ false }}"
        bind:change="onChange_spendLogData_comment"
      />
    </van-col>
    <van-col span="2"></van-col>
  </van-row>

  <van-row>
    <van-col offset="2" span="8">
      <van-cell title="消费类型"></van-cell>
    </van-col>
    <van-col span="12">
      <van-cell title="{{spendLogData.spend_type}}">
        <view slot="icon">
          <text class="cuIcon-{{spendLogData.icon}}"></text>
        </view>
      </van-cell>
    </van-col>
    <van-col span="2"></van-col>
  </van-row>

  <!-- 分类块 -->
  <van-row>
    <van-col offset="4" span="20">
      
      <view style="display:inline-block;margin:5rpx 10rpx 5rpx 0rpx;" wx:for="{{spend_types}}">
        <van-cell clickable title="{{item.text}}" size="mini" bind:click="edit_choose_type" data-text="{{item.text}}" data-icon="{{item.icon}}">
          <view slot="icon"><text class="cuIcon-{{item.icon}}"></text></view>
        </van-cell>
      </view>

    </van-col>
  </van-row>
</van-dialog>